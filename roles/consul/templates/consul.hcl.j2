ui = true
log_level = "INFO"
data_dir = "/opt/consul/data"
bind_addr = "0.0.0.0"
client_addr = "0.0.0.0"
advertise_addr = "{{ nomad_data.client[count].instance.ip_priv1 }}"
retry_join = ["provider=linode api_token={{ api_token }} region={{ region }} tag_name={{ cluster_uuid }}"]

acl {
    enabled = true
    default_policy = "deny"
    down_policy = "extend-cache"
}

connect {
  enabled = true
}
ports {
  grpc = 8502
}